<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.RockPaperScissors" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.RockPaperScissors" parent="Base.Theme.RockPaperScissors" />

    <style name="CustomMaterialButtonPrimary" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/primary_color</item>
        <item name="android:textColor">@color/white</item>
        <item name="shapeAppearance">@style/RoundedButtonShape</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">12dp</item>

    </style>

    <style name="CustomMaterialButtonSecondary" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/secondary_color</item>
        <item name="android:textColor">@color/white</item>
        <item name="shapeAppearance">@style/RoundedButtonShape</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="RoundedButtonShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50dp</item>
    </style>

</resources>